@model IEnumerable<DIDemo2.Models.Employee>
<h1>All Employee Details</h1>
<br />

<a asp-action="AddEmployee" asp-Controller="Employee">Insert Employee </a>


<div>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>Edit|Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        <a asp-action="EditEmployee" asp-route-id="@item.Id" onclick="return confirm('Please Click OK to Update the Employee details...!!')">Edit </a>|
                        <a asp-action="DeleteEmployee" asp-route-id="@item.Id" onclick="return confirm('Please Click OK to delete the Employee details...!!')">Delete</a>|
                        <a asp-action="GetEmployeeById" asp-route-id="@item.Id" >GetDetails</a>

                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>
